<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pixel_google"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/hp"/>

            <TextView
                    style="@style/TextContext.Small.White"
                    android:layout_width="wrap_content"
                    android:text="@string/_6_photos"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:padding="8dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:background="#4D000000"
                    android:drawableStart="@drawable/ic_collections_white_18dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content"/>
        </FrameLayout>

        <TextView
                style="@style/TextContext.Black"
                android:text="@string/_735"
                android:textSize="32sp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="8dp"/>

        <TextView
                style="@style/TextContext.Subtitle"
                android:text="@string/stock_hanya_5_buah"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <TextView
                android:layout_width="match_parent"
                android:text="@string/content_text"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:lineSpacingMultiplier="1"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:text="@string/spesifikasi"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                <TextView
                        style="@style/TextSpec.Field"
                        android:text="@string/display"/>

                <TextView
                        style="@style/TextSpec.Value"
                        android:text="@string/content_specs_display"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                <TextView
                        style="@style/TextSpec.Field"
                        android:text="@string/size"/>

                <TextView
                        style="@style/TextSpec.Value"
                        android:text="@string/content_specs_size"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                <TextView
                        android:text="@string/battery"
                        style="@style/TextSpec.Field"/>

                <TextView
                        android:text="@string/content_specs_battery"
                        style="@style/TextSpec.Value"/>
            </TableRow>
        </TableLayout>

        <TextView
                style="@style/TextContext.Subtitle"
                android:text="@string/dijual_oleh"
                android:layout_marginBottom="8dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="56dp"
                    android:src="@drawable/photo_2"
                    android:id="@+id/profile_image"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_height="56dp"/>

            <TextView
                    style="@style/TextContext"
                    android:text="@string/narenda_wicaksono"
                    android:textColor="@android:color/black"
                    android:layout_toEndOf="@+id/profile_image"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

        <Button
                style="@style/ButtonGeneral"
                android:layout_width="match_parent"
                android:text="@string/beli"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>